<h1>Update a definition of <%= @word.word() %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="updated_def">New Definition:</label>
  <input id="updated_def" name="updated_def" type="text">

  <button type="submit">Update</button>
</form>
<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <br><button type="submit">Delete <%= @word.word %> </button>
</form>
<p><a href="/words">Return to words list</a></p>
